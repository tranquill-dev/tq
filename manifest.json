{
	"manifest_version": 3,
	"name": "tranquill",
	"description": "Human-like typing automation for Google Chrome.",
	"version": "2.4.2",
	"debug": false,
	"icons": {
		"128": "./assets/images/outlined_128x.png",
		"512": "./assets/images/outlined_512x.png"
	},
	"options_page": "./pages/settings.html",
	"action": {
		"default_title": "tranquill",
		"default_popup": "./pages/login.html"
	},
	"commands": {
		"abort-typing": {
			"suggested_key": {
				"default": "Ctrl+Shift+X",
				"mac": "Command+Shift+X"
			},
			"description": "Stop typing immediately"
		}
	},
	"permissions": [
		"storage",
		"debugger",
		"activeTab",
		"scripting",
		"idle",
		"alarms",
		"tabs"
	],
	"host_permissions": ["*://*/*", "https://tranquill.cc/*"],
	"background": {
		"service_worker": "./js/service/service-worker.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["./js/content/visibility-shield.js"],
			"all_frames": true,
			"match_about_blank": true,
			"run_at": "document_start",
			"world": "MAIN"
		},
		{
			"matches": ["<all_urls>"],
			"js": ["./js/core/logger.js", "./js/content/phantom.js"],
			"all_frames": true,
			"match_about_blank": true,
			"run_at": "document_start"
		},
		{
			"matches": ["https://tranquill.cc/*"],
			"js": ["./js/content/portal-listener.js"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["assets/json/*.json"],
			"matches": ["<all_urls>"]
		}
	]
}
